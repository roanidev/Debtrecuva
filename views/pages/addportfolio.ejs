<%- include('../partials/head') %>
    <div class="wrapper">
        <%- include('../partials/sidebar') %>

            <%- include('../partials/navbar') %>

            <div class="content-page">
                <div class="container-fluid  rounded-4 py-3 px-3">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between">
                                    <div class="header-title">
                                        <h4 class="card-title">PORTFOLIO</h4>
                                       
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-3">


                                        <% portfolios.forEach(element=> { %>
                                            <div class="col">
                                                <div class="card shadow-2 border-1">
                                                    <div class="card-body">
                                                        <div
                                                            class="d-flex align-items-center justify-content-between pb-1">
                                                            <div>
                                                                <h4 class="text-purple">
                                                                    <%= element.doc.companyname %>
                                                                </h4>
                                                            </div>
                                                            <div
                                                                class="icon iq-icon-box-2 border border-2 rounded-pill border-puple">
                                                                <img src="<%= element.doc.companylogo %>"
                                                                    class="img-fluid" alt="image">
                                                            </div>
                                                        </div>
                                                        <div class="">
                                                            <div class="d-flex align-items-center">
                                                                <div class="mr-5">
                                                                    <p class="">Debtors: <span class="ml-1"></span>
                                                                        <%= element.doc.portfolio.length %>
                                                                            </span>
                                                                    </p>
                                                                </div>
                                                                <div class="">
                                                                    <p class="">Agent Assigned: <span
                                                                            class="ml-1"></span>
                                                                        <%= element.doc.agentsassigned.length %>
                                                                            </span>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                            <div class="">
                                                                <a href="adddebtors?debtorsid=<%= element.id %>" type="button" 
                                                                    class="btn btn-purple mb-0">
                                                                    Add Portfolio</a>
                                                                    
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                            <% }) %>




                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- Page end  -->
                </div>
            </div>
    </div>

    <%- include('../partials/footer') %>