<%- include('../partials/head') %>
    <div class="wrapper">
        <%- include('../partials/sidebar') %>

            <%- include('../partials/navbar') %>
                <div class="content-page">
                    <div class="container-fluid add-form-list">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between">
                                        <div class="header-title">
                                            <h4 class="card-title">Add Company</h4>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form method="post" data-toggle="validator">
                                            <div class="row">

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Name *</label>
                                                        <input type="text" name="companyname" class="form-control"
                                                            placeholder="Name of company"
                                                            data-errors="Please Enter Name." required>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Collection Email *</label>
                                                        <input type="text" name="collectionsemail" class="form-control"
                                                            placeholder="Collections email"
                                                            data-errors="Please Enter Name." required />
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Company Mobile number</label>
                                                        <input type="tel" class="form-control" name="companymobile"
                                                            placeholder="Mobile number"
                                                            data-errors="Please Enter Mobile Number." required />
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Company Email</label>
                                                        <input type="email" class="form-control" name="companyemail"
                                                            placeholder="example@email.com"
                                                            data-errors="Please Enter Emails." required />
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Logo</label>
                                                        <input type="text" name="companylogo"
                                                            class="form-control image-file" name="pic" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Password</label>
                                                        <input type="password" name="companypassword"
                                                            class="form-control image-file" name="pic" required />
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>About</label>
                                                        <textarea class="form-control" name="companybio"
                                                            rows="4"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary mr-2">
                                                Add Company
                                            </button>
                                            <button type="reset" class="btn btn-danger">Reset</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page end  -->
                    </div>
                </div>
    </div>

    <%- include('../partials/footer') %>