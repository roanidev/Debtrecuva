

<%- include('../partials/head') %>
    <div class="wrapper">
        <%- include('../partials/sidebar') %>

            <%- include('../partials/navbar') %>
                <div class="content-page">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                                    <div>
                                       
                                        <h4 class="mb-3"><%= debtorslist.companyname %></h4>
                                        <h4><%=currentpage %></h4>
                                        <!-- <p class="mb-0">Returns dashboard shows the graphical representation of the channel
                                        and Reference <br>wise returns with the comparison to the total units sold..</p> -->
                                    </div>
                                    <a href="viewportfolio" class="btn btn-primary add-list"><i
                                        class="las la-plus mr-3"></i>View Portfolio</a>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="table table-responsive rounded mb-3 p-3">
                                    <table class="table-responsive mb-0">
                                        <thead class="bg-white text-uppercase">
                                            
                                            <tr class="ligth ligth-data">
                                                
                                                <th>S/N</th>
                                                <% for( let index = 0; index < headings.length; index++ ) { %>
                                                    
                                                    <th> <%= headings[index] %> </th>
                                               
                                                <% } %>
                                               
                                              
                                            </tr>
                                        </thead>
                                        <tbody class="ligth-body">
                                            <% debtorslist.portfolio.forEach((element, index) => { %>
                                                <tr>
                                                    <td><%= index +1 %></td>
                                                    <% for( let index = 0; index < headings.length; index++ ) { %>
                                                        
                                                        <td> <%= element[headings[index]] %> </td>
                                                   
                                                    <% } %>
                                                    
                                                       
                                                </tr>
                                                <% }) %>
                                           


                                        </tbody>
                                    </table>
                               
                                   
                                </div>
                                <div class="d-flex justify-content-end mr-3 pb-1">
                                    <div class="mr-5"> 
                                        <button id="previous" value="<%= currentpage %>" type="button" 
                                            class="btn btn-purple mb-0">
                                            Previous</button>
                                           
                                            
                                    </div>
                                    <div class="ml-3 ">
                                        <button  id="next" value="<%= currentpage %>" type="button" 
                                        
                                            class="btn btn-purple mb-0 px-4 ">
                                           Next
                                       
                                    </button>
                                            
                                    </div>
                                </div>
                                <input id="totalpage" value="<%= numberofpages %>" hidden type="text">
                            </div>
                        </div>
                        <!-- Page end  -->

                    </div>
                </div>

                <%- include('../partials/footer') %>


                <script>
                    var totalPage = document.getElementById("totalpage").value;
                   var totalNumofpage =Math.round(Number(totalPage)+1);
                   console.log(totalNumofpage)
                    var previousbtn = document.getElementById("previous");
                    var nextbtn = document.getElementById("next");



                    previousbtn.addEventListener("click",function(){
                        let page =Number(this.value);
                        if(page==1){
                        }else{
                    let previousPage = Number(this.value)-1;
                    var pagelocation = window.location.href;
                    var firstpage = pagelocation.split("&")[0];
                    var movetoNext =`&page=${previousPage}`;
                    var newurl = firstpage + movetoNext;
                    location.assign(newurl);

                        }
                       

                    })

                    // next btn 
                    nextbtn.addEventListener("click",function(){
                        if(totalNumofpage==Number(searchParams.get("page"))){

                        }else{
                    let nextPage= Number(this.value)+1;
                    var pagelocation = window.location.href;
                    var firstpage = pagelocation.split("&")[0];
                    var movetoNext =`&page=${nextPage}`;
                    var newurl = firstpage + movetoNext;
                    location.assign(newurl)

                        }
                   
                       
                    })
              
                  
                </script>